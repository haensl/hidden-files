#!/bin/bash
function printUsageAndExit {
  echo "Usage: hidden-files [show | hide]\nMay require Finder reset, i.e. killall Finder."
  exit
}

if [ "$#" -ne 1 ]; then
  printUsageAndExit
fi

if [ "$1" == show ]; then
  shouldShow=YES
elif [ "$1" == hide ]; then
  shouldShow=NO
else
  printUsageAndExit
fi

defaults write com.apple.finder AppleShowAllFiles ${shouldShow}
